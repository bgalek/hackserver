{
  "name": "metrics.http_5xx",
  "checks": [
    {
      "name": "number of 5xx",
      "type": "graphite",
      "tags": [
        "service-stats"
      ],
      "fields": {
        "metric": "sumSeries(stats.experiments.chi.chi-server.*.*.*.*.5xx.m1_rate)"
      },
      "triggers": [
        {
          "severity": "critical",
          "enabled": true,
          "fields": {
            "threshold": 0.0,
            "debounce": 20,
            "condition": ">"
          }
        }
      ]
    }
  ],
  "alerts": [
    {
      "name": "email_alert",
      "type": "email",
      "severity": [
        "critical"
      ],
      "applies_to": [
        "number of 5xx"
      ],
      "recipient": "chibox-team@allegro.pl"
    }
  ]
}
