{
  "name": "metrics.http_503",
  "checks": [
    {
      "name": "number of 503",
      "type": "graphite",
      "tags": [
        "service-stats"
      ],
      "fields": {
        "metric": "sumSeries(stats.experiments.chi.chi-server.*.*.*.*.503.m1_rate)"
      },
      "triggers": [
        {
          "severity": "critical",
          "enabled": true,
          "fields": {
            "threshold": 0.0,
            "debounce": 5,
            "condition": ">"
          }
        }
      ]
    }
  ],
  "alerts": [
    {
      "name": "email_alert",
      "type": "email",
      "severity": [
        "critical"
      ],
      "applies_to": [
        "number of 503"
      ],
      "recipient": "chibox-team@allegro.pl"
    }
  ]
}
